{
  "name": "troika",
  "version": "0.6.12",
  "description": "Troika - a framework for managing Three.js scenes using point-in-time descriptors. Includes support for automatic transitions, animations, and pointer events.",
  "author": "Jason Johnston <jason.johnston@protectwise.com>",
  "main": "build/troika.js",
  "jsnext:main": "build/troika.esmodule.js",
  "dependencies": {
    "easingjs": "^1.0.1",
    "prop-types": "^15.5.10",
    "three": "0.86.x"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "adaptive-bezier-curve": "^1.0.3",
    "d3-hierarchy": "^1.0.2",
    "d3-voronoi": "^1.1.0",
    "lodash": "^4.16.6",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rollup": "^0.50.0",
    "rollup-plugin-buble": "^0.16.0",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-string": "^2.0.2",
    "rollup-watch": "^4.3.1",
    "standard": "^10.0.2",
    "three-line-2d": "^1.1.6",
    "uglify-js": "^3.1.4",
    "whatwg-fetch": "latest"
  },
  "scripts": {
    "build": "rollup -c",
    "build-compressed": "rollup -c && uglifyjs --compress --mangle -- build/troika.js > build/troika.min.js",
    "watch": "rollup -w -c",
    "examples": "rollup -w -c rollup.config.examples.js",
    "clean": "rm -rf build",
    "lint": "standard",
    "lint-fix": "standard --fix"
  },
  "publishConfig": {
    "registry": "https://internal-npm/content/repositories/npm/"
  }
}
